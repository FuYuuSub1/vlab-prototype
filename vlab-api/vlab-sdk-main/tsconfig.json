{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],                      
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/**",
    "test/**"
  ],
}
